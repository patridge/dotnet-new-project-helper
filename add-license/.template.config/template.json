{
    "$schema": "http://json.schemastore.org/template",
    "identity": "PatridgeDev.Templates.RepoLicense",
    "author": "Adam Patridge",
    "classifications": [ "license" ],
    "name": "Template creator: license template for Git/GitHub repos",
    "shortName": "repo-license",
    "preferNameDirectory": true,
    "symbols": {
        "copyrightYear": {
            "type": "generated",
            "generator": "now",
            "parameters": {
                "format": "yyyy"
            },
            "replaces": "{copyrightYear}"
        },
        "copyrightName": {
            "type": "parameter",
            "defaultValue": "Someone awesome",
            "replaces": "{copyrightName}"
        },
        "licenseType": {
            "isRequired": true,
            "type": "parameter",
            "datatype": "choice",
            "defaultValue": "MIT",
            "choices": [
              {
                "choice": "MIT",
                "description": "MIT License"
              },
              {
                "choice": "Apache",
                "description": "Apache License 2.0"
              },
              {
                "choice":"GNU-GPL",
                "description": "GNU General Public License 3.0"
              }
            ]
        },
        // Could keep some evaulation logic in symbols to consolidate magic strings.
        // "licenseIsMit": {
        //     "type": "computed",
        //     "value": "(licenseType == \"MIT\")"
        // },
        // "licenseIsApache": {
        //     "type": "computed",
        //     "value": "(licenseType == \"Apache\")"
        // },
        // "licenseIsGnuGpl": {
        //     "type": "computed",
        //     "value": "(licenseType == \"GNU-GPL\")"
        // }
    },
    "sources": [
        // SUCCESS! (Warning: will rename any file with partial name match, not just root file.)
        {
            "rename": {
                "source-mit_LICENSE": "LICENSE",
                "source-apache2.0_LICENSE": "LICENSE",
                "source-gnu-gpl2.0_LICENSE": "LICENSE"
            },
            "modifiers": [
                {
                    "condition": "(licenseType != \"MIT\")",
                    "exclude": [
                        "source-mit_LICENSE"
                    ]
                },
                {
                    "condition": "(licenseType != \"Apache\")",
                    "exclude": [
                        "source-apache2.0_LICENSE"
                    ]
                },
                {
                    "condition": "(licenseType != \"GNU-GPL\")",
                    "exclude": [
                        "source-gnu-gpl2.0_LICENSE"
                    ]
                }
            ]
        }

